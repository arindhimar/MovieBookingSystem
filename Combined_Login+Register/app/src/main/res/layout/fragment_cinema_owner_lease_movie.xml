<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CinemaOwnerLeaseMovie">

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:hint="Search Movie"
        android:padding="10dp"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/search_bar"
        android:id="@+id/LeasedMovieCardsHereForCO"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOpenAddLeaseMovieDialog"
        android:src="@drawable/add_icon"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="15dp"
        android:layout_alignEnd="@+id/LeasedMovieCardsHereForCO"
        android:layout_alignBottom="@+id/LeasedMovieCardsHereForCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>